{
  "dataset_reader": {
    "target_namespace": "target_tokens",
    "type": "nl2bash",
    "source_token_indexers": {
      "tokens": {
        "type": "single_id",
        "namespace": "source_tokens"
      },
      "token_characters": {
        "type": "characters"
      }
    },
    "target_token_indexers": {
      "tokens": {
        "namespace": "target_tokens"
      }
    }
  },
  "vocabulary": {
    "min_count": {
      "source_tokens": 4,
      "target_tokens": 4
    },
    "tokens_to_add": {
        "target_tokens": ["@COPY@"]
    }
  },
  "train_data_path": "data/nl2bash/train.tsv",
  "validation_data_path": "data/nl2bash/dev.tsv",
  "model": {
    "type": "copynet",
    "source_embedder": {
      "tokens": {
        "type": "embedding",
        "vocab_namespace": "source_tokens",
        "embedding_dim": 25,
        "trainable": true
      },
      "token_characters": {
        "type": "character_encoding",
        "embedding": {
          "embedding_dim": 10
        },
        "encoder": {
          "type": "lstm",
          "input_size": 10,
          "hidden_size": 10,
          "num_layers": 2,
          "dropout": 0,
          "bidirectional": true
        }
      }
    },
    "encoder": {
      "type": "lstm",
      "input_size": 45,
      "hidden_size": 100,
      "num_layers": 2,
      "dropout": 0,
      "bidirectional": true
    },
    "attention": {
      "type": "bilinear",
      "vector_dim": 200,
      "matrix_dim": 200
    },
    "target_embedding_dim": 10
    "beam_size": 5,
    "max_decoding_steps": 50
  },
  "iterator": {
    "type": "bucket",
    "padding_noise": 0.0,
    "batch_size" : 32,
    "sorting_keys": [["source_tokens", "num_tokens"]]
  },
  "trainer": {
    "optimizer": {
      "type": "sgd",
      "lr": 0.01
    },
    "num_epochs": 80,
    "cuda_device": 0,
    "should_log_learning_rate": true,
    "should_log_parameter_statistics": false
  }
}
